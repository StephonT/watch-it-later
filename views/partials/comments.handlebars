{{!-- container for each comment --}}
<article class="media">
    <figure class="media-left">
        <p class="image is-48x48">
            {{!-- container for user profile image --}}
            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
        </p>
    </figure>
    <div class="media-content">
        <div class="content">
            <p class="has-text-grey-lighter">
                <strong class="has-text-info">{{user.username}}</strong>
                <small>{{format_date createdAt}}</small>
                <br>
                {{comment_text}}
                <br>
                <small>Commented for {{content_id}}</small>
            </p>
        </div>
    </div>
</article>