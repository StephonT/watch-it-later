<div class="column is-3-table is-3-desktop content-card">
    <a href="/{{type}}/{{id}}">
        <div class="card has-background-dark has-text-light card-hover" data-content-type="{{type}}"
            data-content-id="{{id}}">
            <div class="card-image has-text-centered card-info">
                <img class="card-poster" src="{{poster}}" alt="Poster image for {{title}}">
            </div>
            <div class="card-content card-info ">
                <p class="content-title">{{title}}</p>
                <p class="title is-size-5 content-date has-text-light">{{get_year release}}</p>
            </div>
            {{!-- {{#if loggedIn}}
            <div class="card-footer">
                <p class="card-footer-item">Add to Watchlist</p>
            </div>
            {{/if}} --}}
        </div>
    </a>
</div>